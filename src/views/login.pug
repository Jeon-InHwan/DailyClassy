extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type="String", name="ID", placeholder="ID", maxlength=12, minlength=5, required)
        input(type="password", name="password", placeholder="Password", maxlength=12, minlength=5, required)
        input(type="submit", value="Login")
        br
        a(href="users/github/start") Continue with Github &rarr;
    hr
    div 
        span Don't have an account?  
        a(href="/join") Sign Up now &rarr;



        