extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type="String", name="ID", placeholder="ID", maxlength=12, minlength=5, required)
        input(type="password", name="password", placeholder="Password", maxlength=12, minlength=5, required)
        input(type="submit", value="Login")
        include partials/social-login
    div.auth-switch 
        span Don't have an account? &nbsp &nbsp
        a(href="/join") Join now &rarr;



        